    <%= javascript_include_tag "bootstrap-ie" %>
  <![endif]-->

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    params[:controller], media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  
  <div class="navbar navbar-inverse navbar-moveable" id="nav_line">


    <div class="container">
      <div class="navbar-header">
         <a href="/"><img src="/assets/lessons.png" id="main_logo"></a>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- <%= link_to "Blog", "#", :class => "navbar-brand" %> -->
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown navli"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Web</a>

            <ul class="dropdown-menu menu_dropdown">
              <% Category.where(:field => "Web").each do |c| %>

                <li onclick="window.location = '/<%= c.url_name %>'"><a href="/<%= c.url_name %>"><%= c.name %></a></li>

              <% end %>

              </ul>


          </li>

          <li class="dropdown navli"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Coding</a>

            <ul class="dropdown-menu menu_dropdown">
              <% Category.where(:field => "Coding").each do |c| %>

                <li onclick="window.location = '/<%= c.url_name %>'"><a href="/<%= c.url_name %>"><%= c.name %></a></li>

              <% end %>

              </ul>


          </li>

          <li class="dropdown navli"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Electronics</a>

            <ul class="dropdown-menu menu_dropdown">
                <% Category.where(:field => "Electronics").each do |c| %>

                <li onclick="window.location = '/<%= c.url_name %>'"><a href="/<%= c.url_name %>"><%= c.name %></a></li>

              <% end %>
              </ul>


          </li>
          <li class="dropdown navli"><a href="#contact">About</a></li>
        </ul>
        <input type="email" class="pull-right form-control searchbox" placeholder="Search"> 
      </div>
    </div>
  </div>
  <div class="container yield_container">
    <%= yield %>
  </div>
</body>

