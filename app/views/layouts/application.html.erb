});


function searchqry(q)
{
  //
  //$('.search_results').css('display', 'block');//slideDown();


  $.get('/home/searchqry/' + q, function(data){


    if(data !='0')
    {
    $('.search_results').html(data);

      $('.search_results').slideDown();
    }
     else
        $('.search_results').fadeOut('fast');


  });

  if(q=='')
  {
    $('.search_results').fadeOut('fast');
  }


}


